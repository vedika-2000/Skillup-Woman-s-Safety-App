<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp"
    android:orientation="vertical"
    tools:context=".Fragments.AddContactFragment">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <ImageButton
        android:id="@+id/contact_profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:background="@drawable/circle"
        android:padding="24dp"
        android:paddingTop="20dp"
        android:src="@drawable/ic_account_circle" />


    <EditText
        android:id="@+id/contact_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="#d3d3d3"
        android:hint="Name"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="@color/black" />


    <EditText
        android:id="@+id/first_contact_edittext"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="#d3d3d3"
        android:hint="Contact Number 1"
        android:inputType="phone"
        android:padding="8dp" />

    <EditText
        android:id="@+id/second_contact_edittext"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="#d3d3d3"
        android:hint="Contact Number 2"
        android:inputType="phone"
        android:padding="8dp" />

    <EditText
        android:id="@+id/contact_address_edittext"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_margin="16dp"
        android:background="#d3d3d3"
        android:hint="Address"
        android:inputType="textMultiLine"
        android:padding="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_contact_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:text="ADD CONTACT" />

</LinearLayout>